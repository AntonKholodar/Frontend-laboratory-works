{
  "name": "simple-chat-app-testing",
  "version": "2.0.0",
  "description": "Laboratory Work #2 - Testing Web Interfaces with Jest, React Testing Library, and Cypress",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonKholodar/Frontend-laboratory-works.git"
  },
  "keywords": ["react", "chat", "laboratory", "testing", "jest", "cypress"],
  "author": "Anton Kholodar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AntonKholodar/Frontend-laboratory-works/issues"
  },
  "homepage": "https://github.com/AntonKholodar/Frontend-laboratory-works#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "vite": "^4.1.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "cypress": "^12.7.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "babel-jest": "^29.5.0",
    "identity-obj-proxy": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/main.jsx",
      "!src/setupTests.js"
    ]
  }
}
